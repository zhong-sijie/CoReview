{
  "name": "CoReview",
  "displayName": "CoReview",
  "description": "团队协作的代码审查工具",
  "version": "0.0.2",
  "publisher": "zhongsijie",
  "license": "MIT",
  "author": {
    "name": "zhongsijie"
  },
  "homepage": "https://github.com/zhong-sijie/CoReview#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhong-sijie/CoReview.git"
  },
  "bugs": {
    "url": "https://github.com/zhong-sijie/CoReview/issues"
  },
  "keywords": [
    "vscode",
    "extension",
    "code-review",
    "team-collaboration",
    "code-quality",
    "development-tools"
  ],
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Other",
    "SCM Providers",
    "Testing"
  ],
  "icon": "resources/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "contexts": [
      {
        "key": "coreview.loggedIn",
        "description": "Whether the user is logged in to CoReview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coreview-sidebar",
          "title": "Co Review",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "coreview-sidebar": [
        {
          "id": "coreview.mainView",
          "name": "",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "coreview.refreshReviews",
        "title": "刷新列表",
        "category": "CoReview",
        "icon": "$(refresh)"
      },
      {
        "command": "coreview.logout",
        "title": "退出登录",
        "category": "CoReview",
        "icon": "$(sign-out)"
      },
      {
        "command": "coreview.openWebPage",
        "title": "打开Web页面",
        "category": "CoReview",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coreview.refreshReviews",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation"
        },
        {
          "command": "coreview.openWebPage",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation@2"
        },
        {
          "command": "coreview.logout",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "dev": "pnpm run watch",
    "build": "pnpm run webview:build && pnpm run compile",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "webview:dev": "cd webview && pnpm dev",
    "webview:build": "cd webview && pnpm build",
    "lint": "eslint src shared webview/src --ext .ts,.tsx --fix",
    "test": "vscode-test",
    "package": "pnpm run lint && pnpm run build",
    "vscode:prepublish": "pnpm run package"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.1.37",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@unocss/preset-wind3": "^66.4.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "peerDependencies": {
    "vscode": "^1.1.37"
  }
}
