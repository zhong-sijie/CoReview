{
  "name": "CoReview",
  "displayName": "CoReview",
  "description": "团队协作的代码审查工具",
  "version": "0.0.2",
  "publisher": "zhongsijie",
  "license": "MIT",
  "author": {
    "name": "zhongsijie"
  },
  "homepage": "https://github.com/zhong-sijie/CoReview#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhong-sijie/CoReview.git"
  },
  "bugs": {
    "url": "https://github.com/zhong-sijie/CoReview/issues"
  },
  "keywords": [
    "vscode",
    "extension",
    "code-review",
    "team-collaboration",
    "code-quality",
    "development-tools"
  ],
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Other",
    "SCM Providers",
    "Testing"
  ],
  "icon": "resources/icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "contexts": [
      {
        "key": "coreview.loggedIn",
        "description": "Whether the user is logged in to CoReview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coreview-sidebar",
          "title": "Co Review",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "coreview-sidebar": [
        {
          "id": "coreview.mainView",
          "name": "",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "coreview.refreshReviews",
        "title": "刷新列表",
        "category": "CoReview",
        "icon": "$(refresh)"
      },
      {
        "command": "coreview.logout",
        "title": "退出登录",
        "category": "CoReview",
        "icon": "$(sign-out)"
      },
      {
        "command": "coreview.openWebPage",
        "title": "打开Web页面",
        "category": "CoReview",
        "icon": "$(globe)"
      },
      {
        "command": "coreview.addReviewComment",
        "title": "添加评审意见",
        "category": "CoReview",
        "icon": "$(comment)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coreview.refreshReviews",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation"
        },
        {
          "command": "coreview.openWebPage",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation@2"
        },
        {
          "command": "coreview.logout",
          "when": "view == coreview.mainView && coreview.loggedIn",
          "group": "navigation@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "coreview.addReviewComment",
        "key": "alt+a",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "dev": "pnpm run watch",
    "build": "pnpm run webview:build && pnpm run compile",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "webview:dev": "pnpm -C webview dev",
    "webview:dev:sidebar": "pnpm -C webview dev:sidebar",
    "webview:dev:editorial": "pnpm -C webview dev:editorial",
    "webview:build": "pnpm -C webview build",
    "lint": "eslint src shared webview --ext .ts,.tsx",
    "lint:fix": "eslint src shared webview --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"shared/**/*.{ts,tsx}\" \"webview/**/*.{ts,tsx,js,jsx}\" \"webview/**/*.{css,scss,sass,less}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"shared/**/*.{ts,tsx}\" \"webview/**/*.{ts,tsx,js,jsx}\" \"webview/**/*.{css,scss,sass,less}\" --ignore-path .prettierignore",
    "lint:staged": "lint-staged",
    "test": "vscode-test",
    "package": "pnpm run lint && pnpm run format:check && pnpm run build",
    "vscode:prepublish": "pnpm run package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
